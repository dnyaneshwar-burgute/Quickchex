<%= form_for @contact_list, :html => { :class => "form-horizontal contact_list" } do |f| %>

    <% if @contact_list.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@contact_list.errors.count, "error") %> prohibited this contact_list from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @contact_list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@contact_list[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :contact, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact, :class => 'form-control' %>
    </div>
    <%= error_span(@contact_list[:contact]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            contact_lists_path, :class => 'btn btn-default' %>

<% end %>
